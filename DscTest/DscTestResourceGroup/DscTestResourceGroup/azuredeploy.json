{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dscteststorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "TestVmName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "DscTestVm"
    },
    "TestVmAdminUserName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "labadmin"
    },
    "TestVmAdminPassword": {
      "type": "securestring"
    },
    "TestVmWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "TestVmPipDnsName": {
      "type": "string",
      "minLength": 1
    },
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/dmcwee/azure/tspdemos/DscTest/DscTestResourceGroup/DscTestResourceGroup/DSC/TestVmDSC.zip"
    },
    "_artifactsScript": {
      "type": "string",
      "metadata": {
        "description": "The powershell script (.ps1) to run on the VM"
      },
      "defaultValue": "TestVmDSC.ps1"
    }
  },
  "variables": {
    "dscteststorageName": "[concat('dscstorage', uniqueString(resourceGroup().id))]",
    "dsctestnetworkPrefix": "10.0.0.0/16",
    "dsctestnetworkSubnet1Name": "Subnet-1",
    "dsctestnetworkSubnet1Prefix": "10.0.0.0/24",
    "dsctestnetworkSubnet2Name": "Subnet-2",
    "dsctestnetworkSubnet2Prefix": "10.0.1.0/24",
    "TestVmImagePublisher": "MicrosoftWindowsServer",
    "TestVmImageOffer": "WindowsServer",
    "TestVmOSDiskName": "TestVmOSDisk",
    "TestVmVmSize": "Standard_D2_v2",
    "TestVmVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'dsctestnetwork')]",
    "TestVmSubnetRef": "[concat(variables('TestVmVnetID'), '/subnets/', variables('dsctestnetworkSubnet1Name'))]",
    "TestVmStorageAccountContainerName": "vhds",
    "TestVmNicName": "[concat(parameters('TestVmName'), 'NetworkInterface')]",
    "TestVmPipName": "TestVmPip",
    "TestVmDscArchiveFolder": "DSC",
    "TestVmDscArchiveFileName": "TestVmDsc.zip"
  },
  "resources": [
    {
      "name": "[variables('dscteststorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('dscteststorageType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "dscteststorage"
      },
      "kind": "Storage"
    },
    {
      "name": "dsctestnetwork",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "dsctestnetwork"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('dsctestnetworkPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('dsctestnetworkSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('dsctestnetworkSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('dsctestnetworkSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('dsctestnetworkSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('TestVmNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'dsctestnetwork')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('TestVmPipName'))]"
      ],
      "tags": {
        "displayName": "TestVmNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('TestVmSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('TestVmPipName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('TestVmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('dscteststorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('TestVmNicName'))]"
      ],
      "tags": {
        "displayName": "TestVm"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('TestVmVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('TestVmName')]",
          "adminUsername": "[parameters('TestVmAdminUsername')]",
          "adminPassword": "[parameters('TestVmAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('TestVmImagePublisher')]",
            "offer": "[variables('TestVmImageOffer')]",
            "sku": "[parameters('TestVmWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "TestVmOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('dscteststorageName')), '2016-01-01').primaryEndpoints.blob, variables('TestVmStorageAccountContainerName'), '/', variables('TestVmOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('TestVmNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "Microsoft.Powershell.DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('TestVmName'))]"
          ],
          "tags": {
            "displayName": "TestVmDsc"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "configuration": {
                "url": "[parameters('_artifactsLocation')]",
                "script": "[parameters('_artifactsScript')]",
                "function": "Main"
              },
              "configurationArguments": {
                "nodeName": "[parameters('TestVmName')]"
              }
            },
            "protectedSettings": {
              //  "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('TestVmPipName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "TestVmPip"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
        //, "dnsSettings": {
        //  "domainNameLabel": "[parameters('TestVmPipDnsName')]"
        //}
      }
    }
  ],
  "outputs": {}
}
